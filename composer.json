{
    "name": "matchish/seopagination",
    "type": "library",
    "description": "Blade directives for seo pagination",
    "keywords": [
        "matchish",
        "seopagination"
    ],
    "homepage": "https://github.com/matchish/seopagination",
    "license": "MIT",
    "authors": [
        {
            "name": "Sergey Shyakhov",
            "email": "husband.sergey@gmail.com",
            "homepage": "https://github.com/Husband",
            "role": "Developer"
        }
    ],
    "require": {
        "illuminate/support": "~5.1",
        "php" : "~5.5|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Matchish\\SeoPagination\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Matchish\\SeoPagination\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
